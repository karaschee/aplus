extends ../layout_console

block content
  h1= title
  table.table_normal
    tr 
      th 产品名称
      th 品牌
      th 创建时间
      th 操作
    each product in products
      tr
        td= product.title
        td= product.brand
        td= $.formatDate(product.create_at, true)
        td 
          a(href="/products/#{product._id}/edit") [ 编辑 ] 
          a(href="/products/#{product._id}/delete") [ 删除 ] 
          a(href="/console/products/#{product._id}/comments") [ 查看评论 ]