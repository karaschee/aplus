extends ../layout_console

block content
  h1= title
  table.table_normal
    tr 
      th 文章名称
      th 点击
      th 创建时间
      th 置顶
      th 首页提问区
      th 操作
    each article in articles
      tr
        td
          a(href="/articles/#{article._id}", target="_blank")= article.title
        td= article.count
        td= $.formatDate(article.create_at, true)
        td= article.is_top == '1'?'是':''
        td= article.show_in_home == '1'?'是':''
        td 
          a(href="/articles/#{article._id}/edit") [ 编辑 ] 
          a(class="delete_confirm", href="/articles/#{article._id}/delete") [ 删除 ] 
          a(href="/console/articles/#{article._id}/comments") [ 查看评论 ]
  include ../pages